{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: FastAPI",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "app.main:app",
                "--reload"
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal"
        },
        {
            "name": "Python Debugger: frontend",
            "type": "debugpy",
            "request": "launch",
            "module": "http.server",
            "args": [
                "5500"
            ],
            "cwd": "${workspaceFolder}/app/frontend",
            "console": "integratedTerminal"
        }
    ],
    "compounds": [
        {
            "name": "Run Full App",
            "configurations": [
                "Python Debugger: FastAPI",
                "Python Debugger: frontend"
            ]
        }
    ]
}